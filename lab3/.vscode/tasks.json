// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label" : "Run GTK-wave",
			"type": "shell",
			"command": "gtkwave",
			"args": [
				"./out/${input:fileName}.vcd"
			],
			"options": {
			  "cwd": "${workspaceFolder}"
			},
		},
		{
			"label" : "Run GTK-wave (All VCD files)",
			"type": "shell",
			"command": "gtkwave",
			"args": [
				"./out/*.vcd"
			],
			"options": {
			  "cwd": "${workspaceFolder}"
			},
		}
	],
	"inputs": [
		{
			"id": "fileName",
			"description": "Enter the testbench name (without .v extension)",
			"default": "counter_0_999_tb",
			"type": "promptString"
		}
	]
}